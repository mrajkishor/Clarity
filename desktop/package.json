{
  "name": "clarity-desktop",
  "version": "1.1.0",
  "description": "Clarity Desktop App",
  "main": "main.js",
  "author": "Rajkishor Maharana",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.clarity.app",
    "productName": "Clarity",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "package.json",
      "node_modules/**/*",
      {
        "from": "../dist",
        "to": "dist"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "../public/favicon.ico",
      "forceCodeSigning": false
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
